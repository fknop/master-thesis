{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "JSON Schema for Village1",

  "definitions": {

    "client": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        }
      },
      "required": ["name"]
    },

    "parameterType": {
      "type": "string",
      "enum": ["MIN", "MAX", "NONE"]
    },

    "skill": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "type": {
          "$ref": "#/definitions/parameterType"
        },
        "value": {
          "type": ["number", "integer"],
          "description": "Only used if type is None"
        }
      },
      "required": ["name", "type"],
      "additionalProperties": false
    },


    "skills": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/skill"
      },
      "uniqueItems": true
    },


    "restriction": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "type": {
          "$ref": "#/definitions/parameterType"
        },
        "value": {
          "type": ["number", "integer"],
          "description": "Only used if type is None"
        }
      },
      "required": ["name", "type"],
      "additionalProperties": false
    },

    "restrictions": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/restriction"
      },
      "uniqueItems": true
    },

    "periods": {
      "type": "array",
      "items": {
        "type": "integer",
        "minimum": 0
      },
      "examples": [
        [0, 2, 4]
      ]
    }
  },


  "type": "object",
  "properties": {

    "T": {
      "type": "integer",
      "minimum": 1,
      "description": "Number of periods"
    },

    "machines": {
      "type": "integer",
      "minimum": 0,
      "description": "Number of machines"
    },

    "locations": {
      "type": "integer",
      "minimum": 0,
      "description": "Number of locations"
    },

    "workers": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "name": {
            "type": "string"
          },
          "skills": {
            "$ref": "#/definitions/skills"
          },
          "availabilities": {
            "$ref": "#/definitions/periods"
          }
        },
        "required": ["id", "availabilities"],
        "additionalProperties": false
      }
    },

    "workerWorkerIncompatibilities": {
      "type": "array",
      "items": {
        "type": "array",
        "items": {
          "type": "integer",
          "uniqueItems": true
        }
      },
      "uniqueItems": true
    },

    "workerClientIncompatibilities": {
      "type": "array",
      "items": {
        "type": "array",
        "items": {
          "type": "integer"
        }
      },
      "uniqueItems": true
    },

    "demands": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },

          "client": {
            "$ref": "#/definitions/client"
          },

          "machines": {
            "type": "array",
            "items": {
              "type": "integer"
            },
            "uniqueItems": true
          },


          "locations": {
            "type": "array",
            "items": {
              "type": "integer"
            },
            "uniqueItems": true
          },

          "periods": {
            "$ref": "#/definitions/periods"
          },

          "requiredWorkers": {
            "type": "integer",
            "minimum": 0
          },

          "requiredSkills": {
            "type": "array",
            "items": {
              "$ref": "#/definitions/skills"
            }
          }
        },
        "required": ["id", "client", "periods", "requiredWorkers"],
        "additionalProperties": false
      }
    }
  },
  "required": [
    "T",
    "demands",
    "machines",
    "workers",
    "locations"
  ],
  "additionalProperties": false
}
