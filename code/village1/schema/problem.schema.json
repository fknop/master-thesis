{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "JSON Schema for Village1",

  "definitions": {

    "client": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        }
      },
      "required": ["name"]
    },

    "parameterType": {
      "type": "string",
      "enum": ["Min", "Max", "None"]
    },

    "skill": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "type": {
              "$ref": "#/definitions/parameterType"
            },
            "value": {
              "type": ["number", "integer"],
              "description": "Only used if type is None"
            }
          },
          "required": ["name"],
          "additionalProperties": false
        }
      ]
    },

    "skills": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/skill"
      },
      "uniqueItems": true
    },

    "machine": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },

    "location": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },

    "restriction": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "type": {
          "$ref": "#/definitions/parameterType"
        },
        "value": {
          "type": ["number", "integer"],
          "description": "Only used if type is None"
        }
      },
      "required": ["name", "type"],
      "additionalProperties": false
    },

    "restrictions": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/restriction"
      },
      "uniqueItems": true
    },

    "periods": {
      "type": "array",
      "items": {
        "type": "integer",
        "minimum": 0
      },
      "examples": [
        [0, 2, 4]
      ]
    }
  },


  "type": "object",
  "properties": {

    "T": {
      "type": "integer",
      "minimum": 1,
      "description": "Number of periods"
    },

    "machines": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/machine"
      },
      "uniqueItems": true,
      "description": "All the machines"
    },

    "locations": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/location"
      },
      "uniqueItems": true,
      "description": "All the locations"
    },

    "clients": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/client"
      }
    },

    "workers": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "name": {
            "type": "string"
          },
          "skills": {
            "$ref": "#/definitions/skills"
          },
          "availabilities": {
            "$ref": "#/definitions/periods"
          }
        },
        "required": ["availabilities", "name"],
        "additionalProperties": false
      }
    },

    "workerWorkerIncompatibilities": {
      "type": "array",
      "items": {
        "type": "array",
        "items": {
          "type": "integer",
          "uniqueItems": true
        }
      },
      "uniqueItems": true,
      "description": "List of [worker, worker] incompatibilities"
    },

    "workerClientIncompatibilities": {
      "type": "array",
      "items": {
        "type": "array",
        "items": {
          "type": "integer"
        }
      },
      "uniqueItems": true,
      "description": "List of [worker, client] incompatibilities"
    },

    "clientWorkerPreferences": {
      "type": "array",
      "items": {
        "type": "array",
        "items": {
          "type": "integer"
        }
      }
    },

    "demands": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },

          "client": {
            "type": "integer",
            "description": "The client index from the clients list declared in the root object"
          },

          "machineNeeds": {
            "type": "array",
            "items": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/machine"
              }
            },
            "description": "List of machine needs, each sublist is the possible machines for that need. One of them need to be assigned for each need"
          },


          "possibleLocations": {
            "type": "array",
            "items": {
              "type": "integer"
            },
            "uniqueItems": true,
            "description": "Set of possible locations"
          },

          "periods": {
            "$ref": "#/definitions/periods"
          },

          "requiredWorkers": {
            "type": "integer",
            "minimum": 0
          },

          "requiredSkills": {
            "type": "array",
            "items": {
              "$ref": "#/definitions/skills"
            },
            "description": "List of required skills. Each sublist of skill is required by only one worker in the team."
          },

          "additionalSkills": {
            "type": "array",
            "items": {
              "$ref": "#/definitions/skill"
            },
            "description": "List of required skills that at least one worker in the team need to have"
          }
        },
        "required": ["client", "periods", "requiredWorkers"],
        "additionalProperties": false
      }
    }
  },
  "required": [
    "T",
    "demands",
    "machines",
    "clients",
    "workers",
    "locations"
  ],
  "additionalProperties": false
}
